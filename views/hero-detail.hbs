{{#>  layout currentPage="hero"}}
    <!-- hero DETAIL SECTION -->
    <article class="hero-detail">
        <h1>{{hero.title}}</h1>

        <p> {{formatDateToWIB hero.postedAt}} | {{hero.type}} </p>

        <img src="{{hero.image}}" alt="hero-image">

        <p class="mt-3"> {{hero.content}} </p>
    </article>
{{/layout}}